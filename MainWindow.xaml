<Window x:Class="u3SummativeShipston.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u3SummativeShipston"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="txtInput"
                 Text="Type letter or word guess here"/>
        <Button x:Name="btnGuessLetter"
                Content="Guess"
                Click="btnGuess_Click"/>
        <Label x:Name="lblOutput"
               Content=""/>
        <Label x:Name="lblLettersGuessed"
               Content="Letters guessed: "/>
    </StackPanel>
</Window>
